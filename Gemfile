source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

# Use mysql as the database for Active Record
gem 'mysql2'

# Testing stuff
group :development, :test do
  gem 'factory_girl_rails'
  gem 'rspec-rails'

  gem 'guard-rspec'
  gem 'guard-livereload'
  gem 'rb-fsevent', '~> 0.9'

  gem 'simplecov'
end